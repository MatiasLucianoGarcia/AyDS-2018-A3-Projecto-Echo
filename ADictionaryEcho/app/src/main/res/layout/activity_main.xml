<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="ayds.dictionary.echo.view.TranslatorViewActivity">

  <ProgressBar
      android:id="@+id/progressBar"
      style="?android:attr/progressBarStyle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/textField1"
      android:layout_alignParentEnd="true"
      android:visibility="gone"/>

  <TextView
    android:id="@+id/title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="@string/search_in_yandex" />

  <EditText
    android:id="@+id/textField1"
    android:layout_below="@id/title"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <Button
    android:id="@+id/goButton"
    android:layout_below="@id/textField1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:text="@string/go" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/goButton">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical" >

      <TextView
          android:id="@+id/textViewSource1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp" />

      <TextView
          android:id="@+id/textPaneMeaning1"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textViewSource2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp" />

      <TextView
          android:id="@+id/textPaneMeaning2"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/textViewSource3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp" />

      <TextView
          android:id="@+id/textPaneMeaning3"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:padding="18dp"
          android:textStyle="bold" />
    </LinearLayout>
  </ScrollView>

</RelativeLayout>